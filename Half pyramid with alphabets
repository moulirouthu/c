#include <stdio.h>
void main()
{
    int i,j,rows;
    char ch;
    printf("Enter The Number of Rows: ");
    scanf("%d",&rows);
    ch='A';
    for(i=1;i<=rows;i++)
    {
        for(j=1;j<=i;j++)
        {
            printf("%c\t",ch++);
        }
        printf("\n");
    }
}


Output
Enter The Number of Rows: 5
A	
B	C	
D	E	F	
G	H	I	J	
K	L	M	N	O	
